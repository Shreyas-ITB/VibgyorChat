# VibgyorChat Configuration
# Environment variables with VITE_ prefix are exposed to the browser

# Backend API base URL
VITE_API_BASE_URL=http://localhost:8000

# Socket.IO server URL (usually same as API)
VITE_SOCKET_BASE_URL=http://localhost:8000

# Frontend URL (for invite links)
VITE_FRONTEND_URL=http://localhost:3000

# Application name
VITE_APP_NAME=VibgyorChat

# Admin Panel Credentials
VITE_ADMIN_USERNAME=admin
VITE_ADMIN_PASSWORD=admin123

# Allowed Frontend Hosts (comma-separated for multiple hosts)
VITE_ALLOWED_HOSTS=http://localhost:3000
